<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ma.ac.emi.findmyfriends">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity"></activity>

        <activity android:name=".FriendsActivity" android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme" />
        <activity android:name=".AddFriendsActivity" android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme" />
        <activity android:name=".InvitesFriendsActivity" android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme" />
        <activity android:name=".LookForFriendActivity" android:label="@string/title_activity_look_for_friend"
            android:theme="@style/AppTheme" />
    </application>

</manifest>